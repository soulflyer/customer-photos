#!/bin/bash
DRYRUN=""
#set DRYRUN to "n" to make rsync do a dry run
FILENAME=`pwd`
ALLWAYSEXCLUDE=" --exclude *.scss --exclude .sass-cache"
EXCLUDES="--exclude fullsize"
SERVER=soulflyer.co.uk
LOGIN=jphuquoc

REMOTEDIRECTORY="Pictures/divephotos/"

while [ "$1" != "" ]
do
  case $1 in
    -f)
      EXCLUDES="--exclude fullsize --exclude photos.zip"
      shift
      ;;
    -n)
      DRYRUN="n"
      shift
      ;;
    -a)
      EXCLUDES=""
      shift
      ;;
    -?)
      cat <<EOF
sends a set of pictures to the server. If no directory is specified, then it will send the current directory.
OPTIONS:
-a includes the fullsize pictures
-f fast. excludes the zip file and the fullsize pics
-n dry run
EOF
      exit
      ;;
    *)
      FILENAME=$1
      shift
      echo rsync -vaik$DRYRUN --delete $ALLWAYSEXCLUDE $EXCLUDES $FILENAME $LOGIN@$SERVER:$REMOTEDIRECTORY
      rsync -vaik$DRYRUN --delete $ALLWAYSEXCLUDE $EXCLUDES $FILENAME $LOGIN@$SERVER:$REMOTEDIRECTORY
      ;;
  esac
done
